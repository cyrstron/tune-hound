{
    "compilerOptions": {
      "target": "ESNext",
      "module": "esnext", 
      "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
      ],
      "allowJs": true,
      "sourceMap": true, 
      "strict": true,           
      "noImplicitAny": true,   
      "removeComments": true,  
      "preserveConstEnums": true,  
      "outDir": "./.dist",     
      "jsx": "react",  
      "baseUrl": "src", 
      "paths": {
        "@app/*": ["./*"]
      }, 
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,  
      "experimentalDecorators": true, 
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "moduleResolution": "node"
    },
    "include": [
      "./src/**/*",
      "./node_modules/@types",
      "tsconfig.json"
    ]
}