{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": ".dist",
    "sourceRoot": "src",
    "baseUrl": ".",
    "typeRoots" : [
      "./node_modules/@types"
    ]
  }
}